# Root level .gitignore for MAI project

# Rails specific ignores (legacy store directory)
/store/log/*
!/store/log/.keep
/store/tmp/*
!/store/tmp/.keep
!/store/tmp/pids/.keep
!/store/tmp/storage/.keep
/store/storage/*
!/store/storage/.keep
/store/public/assets

# Rails API specific ignores
/api/log/*
!/api/log/.keep
/api/tmp/*
!/api/tmp/.keep
!/api/tmp/pids/.keep
!/api/tmp/storage/.keep
/api/storage/*
!/api/storage/.keep
/api/public/assets
/api/config/master.key
/api/config/credentials.yml.enc
/api/storage/development.sqlite3
/api/storage/*.sqlite3
/api/storage/*.sqlite3-*

# Next.js specific ignores
/base/node_modules
/base/.next
/base/out
/base/build
/base/.env*

# General ignores
.DS_Store
*.log
*.tmp
*.cache
.env*
*.pem

# IDE files
.vscode/
.idea/
*.swp
*.swo

# OS files
Thumbs.db
.DS_Store
